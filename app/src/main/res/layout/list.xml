<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@android:color/transparent"
    android:padding="1dp">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="1dp"
        android:alpha="0.78"
        android:gravity="top">

        <LinearLayout
            android:id="@+id/headermenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@android:drawable/dark_header"
            android:fillViewport="true"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subhead"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:gravity="left"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingTop="2dp"
                android:shadowColor="@color/transparent_black_30"
                android:shadowDx="4.5"
                android:shadowDy="5.8"
                android:shadowRadius="6.8"
                android:text="Choose a year: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp"
                android:typeface="serif" />

            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:cropToPadding="true"
                android:src="@android:drawable/btn_dialog" />

        </LinearLayout>

        <ImageView
            android:id="@+id/image_history"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_below="@id/headermenu"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:src="@drawable/history2" />
    </RelativeLayout>


    <ListView
        android:id="@+id/list1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:background="@color/transparent"/>
</RelativeLayout>